<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer rounded rect highlight, centered and smaller than icon container -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#60FFFFFF" />
            <corners android:radius="10dp" />
            <size android:width="35dp" android:height="35dp" />
        </shape>
    </item>

    <!-- Inner rounded rect for subtle depth, centered -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" />
            <corners android:radius="8dp" />
            <size android:width="33dp" android:height="33dp" />
        </shape>
    </item>
</layer-list>

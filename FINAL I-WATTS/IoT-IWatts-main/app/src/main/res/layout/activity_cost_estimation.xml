<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CostEstimationActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_yellow_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/hamburger_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_hamburger"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        tools:ignore="contentDescription"/>
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_notification"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        tools:ignore="contentDescription"/>
    <TextView
        android:id="@+id/RealTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Cost Estimation"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#863B17"/>
    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/RealTimeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FEF9E7">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:baselineAligned="false"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/historicalDataText"
                        android:weightSum="2">

                        <!-- Left part: Dates -->
                        <LinearLayout
                            android:layout_marginEnd="2dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/startingDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="#863B17"
                                app:suffixTextColor="#863B17">

                                <EditText
                                    android:id="@+id/etStartingDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="date"
                                    android:hint="From"
                                    android:textColorHint="#863B17"
                                    android:textColor="#863B17"
                                    android:textSize="13sp"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp"
                                    android:drawableEnd="@drawable/ic_edit"
                                    android:drawableTint="#863B17" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/endingDate"
                                android:layout_marginStart="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="#863B17"
                                app:suffixTextColor="#863B17">

                                <EditText
                                    android:id="@+id/etEndingDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:inputType="date"
                                    android:hint="To"
                                    android:textColorHint="#863B17"
                                    android:textColor="#863B17"
                                    android:textSize="13sp"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp"
                                    android:drawableEnd="@drawable/ic_edit"
                                    android:drawableTint="#863B17" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:text="Set the date you want to monitor"
                        android:textColor="#863B17"
                        android:textSize="13sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/batelecII"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#863B17"
                            app:suffixText=" / kwh"
                            app:suffixTextColor="#863B17"
                            app:prefixTextColor="#863B17"
                            app:prefixText="₱">

                            <EditText
                                android:textAlignment="center"
                                android:id="@+id/etBatelecRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="#863B17"
                                android:textSize="13sp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:hint="@string/text23"
                                android:drawableEnd="@drawable/ic_edit"
                                android:drawableTint="#863B17"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:text="Edit based on the current BATELEC II rate"
                        android:textColor="#863B17"
                        android:textSize="13sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#F3E787">

                <LinearLayout
                    android:id="@+id/bg_estimatedCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Cost details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text22"
                            android:textStyle="bold"
                            android:textSize="40sp"
                            android:textColor="#863B17"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated Total Cost"
                            android:textSize="13sp"
                            android:textColor="#863B17"
                            android:layout_gravity="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:background="#863B17" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:weightSum="6">

                            <TextView
                                android:id="@+id/tvTotalKwh"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="@string/text22"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#863B17" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/text24"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#863B17" />

                            <TextView
                                android:id="@+id/tvBatelecRate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="@string/text22"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="#863B17" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bg_estimatedCost"
                app:layout_constraintBottom_toTopOf="@+id/bg_moreInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/otherInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bg_mainConsumption"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FEF9E7"
                        android:padding="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Usage"
                                android:textColor="#863B17"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"/>
                            <TextView
                                android:id="@+id/tvTotalUsage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#863B17"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:text="kwh"
                                android:textColor="#863B17"
                                android:alpha="0.8"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mainConsumption"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FEF9E7"
                        android:padding="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DailyCost"
                                android:textColor="#863B17"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"/>

                            <TextView
                                android:id="@+id/tvDailyCost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#863B17"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/daily_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:background="@drawable/bg_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <!-- Area Icon -->
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🗓️"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/bg_yellowish"
                            android:layout_marginEnd="16dp"/>
                        <!-- Area Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:text="Daily Cost Breakdown"
                                android:textColor="#863B17"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click to view details"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:alpha="0.7"/>
                        </LinearLayout>

                        <!-- Arrow Text Icon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▶"
                            android:textColor="#863B17"
                            android:textSize="25sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/area_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:background="@drawable/bg_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <!-- Area Icon -->
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🏠"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="@drawable/bg_yellowish"
                            android:layout_marginEnd="16dp"/>
                        <!-- Area Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:text="Area Cost Comparison"
                                android:textColor="#863B17"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click to view details"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:alpha="0.7"/>
                        </LinearLayout>

                        <!-- Arrow Text Icon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▶"
                            android:textColor="#863B17"
                            android:textSize="25sp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FEF9E7"
                app:cardElevation="4dp">

                <FrameLayout
                    android:id="@+id/comparison"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bg_electricityRate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#863B17"
                        android:text="@string/text60"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:baselineAligned="false">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/area1_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text16"
                                android:drawableLeft="@drawable/ic_area1"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                tools:ignore="RtlCompat" />

                            <TextView
                                android:id="@+id/area2_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text17"
                                android:drawableLeft="@drawable/ic_area2"
                                android:layout_marginTop="40dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                tools:ignore="RtlCompat" />

                            <TextView
                                android:id="@+id/area3_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text18"
                                android:layout_marginTop="70dp"
                                android:drawableLeft="@drawable/ic_area3"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                tools:ignore="RtlCompat" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text62"
                                android:layout_marginTop="110dp"
                                android:layout_marginStart="10dp"
                                android:textAlignment="textStart"
                                android:textColor="#863B17"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tvProjectedText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text63"
                                android:layout_marginTop="140dp"
                                android:layout_marginBottom="20dp"
                                android:textAlignment="center"
                                android:paddingStart="10dp"
                                android:textColor="#863B17"
                                android:textSize="13sp"
                                tools:ignore="RtlSymmetry" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvArea1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text22"
                                android:layout_marginTop="12dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvArea2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text22"
                                android:layout_marginTop="42dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvArea3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text22"
                                android:layout_marginTop="72dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"

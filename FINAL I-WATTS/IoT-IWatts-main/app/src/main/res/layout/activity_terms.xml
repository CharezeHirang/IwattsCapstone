<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_light_yellow"
    android:padding="16dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".TermsActivity">

    <!-- Header with back button and title -->
    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:contentDescription="Back to settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_terms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#863B17"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/ic_back"
        app:layout_constraintStart_toEndOf="@id/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/ic_back"/>

    <!-- Scrollable content container -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/tv_terms_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Terms and Conditions Content -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Updated: September 21, 2025"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to I-Watts, a mobile application designed to help users monitor their energy consumption and learn practical tips for saving energy. By using our app, you agree to comply with and be bound by the following Terms and Conditions. Please read them carefully."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Acceptance of Terms"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="By downloading, installing, or using the I-Watts app, you agree to these Terms and Conditions. If you do not agree, you should refrain from using the app."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Use of the App"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The I-Watts app is intended for personal, educational, and informational purposes only. Users must not misuse the app, attempt unauthorized access, or interfere with its operation. Each user is responsible for ensuring that their device is secure and compatible with the app."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Features"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The I-Watts app provides a dashboard that allows users to monitor their energy consumption and corresponding costs. It offers real-time tracking of electricity usage and provides cost estimation based on recorded data. The app maintains a history of consumption to help users review and compare their energy patterns over time. Users also receive alerts and notifications related to energy usage for better awareness and control. In addition, the app contains an energy-saving tips feature, which provides categorized suggestions to help users reduce electricity consumption. The settings section allows users to customize their preferences and manage access to these features."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Data and Privacy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The I-Watts app may collect limited, non-personal information, such as device usage data, for academic and improvement purposes. No personally identifying information will be sold or shared with third parties. All data will be handled in accordance with applicable laws and will be used strictly for research and academic development."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. Intellectual Property"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All content within the I-Watts app, including text, graphics, features, and designs, is the property of the I-Watts development team and is protected by copyright laws. Users may not copy, modify, or distribute app content without prior written permission."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6. Limitations of Liability"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The I-Watts app provides estimates and energy-saving suggestions only. The development team does not guarantee exact energy savings and is not liable for any damages, losses, or misuse resulting from reliance on the app."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7. Updates and Changes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We may update the app and these Terms and Conditions from time to time. Continued use of the app after updates means you accept the revised terms."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8. Termination"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We reserve the right to suspend or terminate access to the app if these Terms and Conditions are violated."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9. Governing Law"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="These Terms and Conditions shall be governed by and interpreted in accordance with the laws of the Republic of the Philippines."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10. Contact Us"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If you have any questions about these Terms and Conditions, you may contact the I-Watts development team at iwattsenergy@gmail.com."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Privacy Policy Link -->
            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="16sp"
                android:textColor="#863B17"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
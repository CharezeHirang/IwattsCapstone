                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F3E787"
                    android:padding="16dp">

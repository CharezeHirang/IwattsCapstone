                            android:textColor="#863B17"
                            android:textSize="13sp"
                            android:textAlignment="center"
                            android:alpha="0.7"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_light_yellow"
    android:padding="16dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".PrivacyPolicyActivity">

    <!-- Header with back button and title -->
    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:contentDescription="Back to terms and conditions"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_privacy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#863B17"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/ic_back"
        app:layout_constraintStart_toEndOf="@id/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/ic_back"/>

    <!-- Scrollable content container -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/tv_privacy_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Privacy Policy Content -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Updated: September 21, 2025"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The I-Watts app values your privacy. This Privacy Policy explains how we collect, use, and protect information when you use our app."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Information We Collect"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The I-Watts app is designed for educational and informational purposes and does not require users to provide personally identifiable information. However, it may collect non-personal usage data such as device type, app usage frequency, error reports, and energy consumption inputs provided by users for monitoring purposes."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. How We Use the Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Collected data is used to improve app functionality and user experience, to support research and academic purposes as part of the I-Watts capstone project, and to generate general non-identifiable reports about energy usage trends."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Data Security"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We implement basic safeguards to protect data from unauthorized access, but no system is completely secure. Users are encouraged to keep their devices secure when using the app."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Sharing of Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We do not sell, rent, or share personal information with third parties. Data may only be shared in aggregated, anonymous form for academic presentations or research purposes."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. Children's Privacy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The I-Watts app does not knowingly collect data from children under the age of 13. If such data is accidentally collected, it will be deleted immediately."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6. Changes to This Privacy Policy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We may update this Privacy Policy from time to time. Any changes will be reflected in the app with an updated 'Last Updated' date."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7. Contact Us"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If you have any questions or concerns regarding this Privacy Policy, please contact the I-Watts development team at iwattsenergy@gmail.com."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
